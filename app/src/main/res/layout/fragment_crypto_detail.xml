<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".ui.crypto_detail.CryptoDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cryptoRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.crypto_detail.CryptoDetailFragment">

        <TextView
            android:id="@+id/tvSymbolD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="BTCINR"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPriceD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="$123423434"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvSymbolD"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/tvSymbolD" />

        <TextView
            android:id="@+id/tvVolumeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Volume: 34762"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvSymbolD"
            app:layout_constraintTop_toBottomOf="@+id/tvSymbolD" />


        <TextView
            android:id="@+id/tvOpenD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open: $23124234"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvPriceD"
            app:layout_constraintTop_toTopOf="@+id/tvVolumeD" />

        <TextView
            android:id="@+id/tvLowD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Low: $123124"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvVolumeD"
            app:layout_constraintTop_toBottomOf="@+id/tvVolumeD" />

        <TextView
            android:id="@+id/tvHighD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="High: $123412 "
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvOpenD"
            app:layout_constraintTop_toBottomOf="@+id/tvOpenD" />

        <TextView
            android:id="@+id/tvBidD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bid Price: 342314"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvLowD"
            app:layout_constraintTop_toBottomOf="@+id/tvLowD" />

        <TextView
            android:id="@+id/tvAskD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ask Price: 324324"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvHighD"
            app:layout_constraintTop_toBottomOf="@+id/tvHighD" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/pbCryptoDetail"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />

</androidx.constraintlayout.widget.ConstraintLayout>